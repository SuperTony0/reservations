<div class="row">
      <p id="notice"><%= notice %></p>

    <div class= 'col-md-8'>
      <div class= 'box panel panel-default text-center'>
        <p>
          <strong>Event:</strong>
          <h2 line-height= '50%'><%= @trip.destination %></h2>
          <strong>Date:</strong>
          <%= @trip.date_start.to_datetime.strftime('%D')%>-<%=@trip.date_end.strftime('%D') %>
        </p>
        <p>
          <strong> Rooms:</strong> <%= @trip.rooms.count %>
        </p>
          
        <div class="btn-group" role="group" aria-label="...">
          <button type="button" class="btn btn-default"><%= link_to 'Add Room', new_trip_room_path(@trip)%></button>
          <button type="button" class="btn btn-default"><%= link_to 'Edit', edit_trip_path(@trip) %> </button>
          <button type="button" class="btn btn-default"><%= link_to 'Back', trips_path %></button>
          <button id="btn1" type="button" class="btn btn-default"> 'Button'</button>
        </div>
          <% if @trip.users.include? current_user %>
            <p> You are on this trip </p>
          <% elsif user_signed_in? %>
            <p><%= link_to 'Join Trip', join_trip_path, method: :post %></p>
          <% end %>
      </div>
    </div>
    
      <% if @trip.users.any?  %>
        <div class='col-md-4' >
          <div class= 'box panel panel-default text-center'>
            <p> Travelers: </p>
            <% @trip.users.each do |user| %>
              <%= image_tag user.identity.image %>
              <%= user.name %>
              <p></p>
            <%end%>
          </div>
        </div>
      <%end %>
</div>



  <!-- shows the current rooms booked on the trip only if a room exists -->
 <div class="row">
  <%if @rooms.any? {|room| room.trip_id == @trip.id }%>
    <% @rooms.each do |room| %>
      <div class= 'col-sm-4'>
      <div class= 'box panel panel-default text-center'>
        <div class="row">
          <div class="col-sm-4">Spots open  </div>
          <div class="col-sm-4">Description </div>
          <div class="col-sm-4"> Location   </div>
        </div>
        <div clas="row">    
          <% if room.trip_id == @trip.id %>
            <div class="col-sm-4"><%= room.spots.count %></div>
            <div class="col-sm-4"><%= room.description %></div>
            <div class="col-sm-4"><%= room.location %></div>
        </div>
        <div class="row">
        <div class="col-sm-6"><%= link_to 'Room Details', room %></div>
        <% if room.owner_id == current_user.id %>
        <div class="col-sm-6"><%=link_to 'Remove Room',room, method: :delete, data: { confirm: 'Are you sure?' }%></div>
        <%end%>
          <%end%> <!-- ending room description loop-->
        </div>
      </div><!--close box panel div-->
      </div><!--close col div-->
    <% end %>
  <%end%>
</div> <!-- ends div row


