<div class="row">
      <p id="notice"><%= notice %></p>
    <div class= 'col-md-8'>
      <div class= 'box panel panel-default text-center'>
        <p>
          <strong>Event:</strong>
          <h2 line-height= '50%'><%= @trip.destination %></h2>
          <strong>Date:</strong>
          <%= @trip.date_start.to_datetime.strftime('%D')%>-<%=@trip.date_end.strftime('%D') %>
        </p>
        <p>
          <strong> Rooms:</strong> <%= @trip.rooms.count %>
        </p>
          
        <div class="btn-group" role="group" aria-label="...">
            <button type="button" class="btn btn-default"><%= link_to 'Add Room', new_trip_room_path(@trip)%></button>
            <button type="button" class="btn btn-default"><%= link_to 'Edit', edit_trip_path(@trip) %> </button>
            <button type="button" class="btn btn-default"><%= link_to 'Back', trips_path %></button>
        </div>

          <% if @trip.users.include? current_user %>
            <p> You are on this trip </p>
          <% elsif user_signed_in? %>
            <p><%= link_to 'Join Trip', join_trip_path, method: :post %></p>
          <% end %>
        </nav>
      </div>
    </div>
    
      <% if @trip.users.any?  %>
        <div class='col-md-4' >
            <div class= 'box panel panel-default text-center'>
                <p> Travelers: </p>
                <% @trip.users.each do |user| %>
                  <p><%= user.first_name %></p>
                <%end%>
            </div>
        </div>
      <%end %>
</div>



  <!-- shows the current rooms booked on the trip only if a room exists -->
 <div class="row">
  <%if @rooms.any? {|room| room.trip_id == @trip.id }%>
    <p>
      <% @rooms.each do |room| %>
      <div class= 'col-md-4'>
      <div class= 'box panel panel-default text-center'>
      <div class='container'>
         <table>
          <thead>
            <tr>
              <th>Capacity</th>
              <th>Description</th>
              <th>Location</th>
              <th>Number</th>
              <th>Price</th>
              <th colspan="5"></th>
            </tr>
          </thead>

          <tbody>
                <div class= "container" >
                  <tr>
                    <% if room.trip_id == @trip.id %>
                      <td><%= room.spots.count %></td>
                      <td><%= room.description %></td>
                      <td><%= room.location %></td>
                      <td><%= room.number %></td>
                      <td><%= room.price %></td>
                  </tr>
                  <tr>
                     <td colspan="2"> <%= link_to 'Room Details', room %></td>
                  
                     <td colspan="3"> <%= link_to 'Remove Room', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                    <%end%> <!-- ending room description loop-->
                  </tr>
                </div> <!--ending container div -->
          </tbody>
        
        </table>
        
      </div><!--close container div-->
      </div><!--close box panel div-->
      </div><!--close col div-->
      <% end %>
    </p>
  <%end%>
</div>


