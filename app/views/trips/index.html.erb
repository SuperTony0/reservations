<%= render 'layouts/home' unless user_signed_in? %>

<p id="notice "><%= notice %></p>

<h1>Listing Trips</h1>

<% @trips.each do |trip| %>
<div id='trip-container' class='container'>
<table>
  <thead>
    <tr>
      <th style="width:30%">Destination</th>
      <th style="width:30%">Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
      <%if trip.date_end > Date.current %>
        <tr>
          <td><%= trip.destination %></td>
          <td><%= trip.date_start.to_datetime.strftime('%D') %> - <%= trip.date_end.strftime('%D')%></td>
        </tr><tr>
          <td><%= link_to 'Show', trip %></td>
          <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        </tr>
      <%end%><!-- ends date validation -->
      </tbody>
</table>
</div>
<% end %> <!-- ends trip loop -->

<br>

<%= link_to 'New Trip', new_trip_path %>
 
