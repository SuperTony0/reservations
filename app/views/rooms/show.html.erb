<p id="notice"><%= notice %></p>

<div class="row panel container">
 
  <p>
    <h1 class="text-center"><%= @room.description %></h1>
  </p>
  <p>
    <strong>Location:</strong>
    <%= @room.location %>
  </p>
  <p>
    <strong>Number:</strong>
    <%= @room.number %>
  </p>
  <p>
    <strong>Price:</strong>
    <%= @room.price %>
  </p>
</div>

<div class="row panel container">
  <table>
    <thead>
      <tr>
        <strong>Spots: </strong>
      </tr>
    </thead>

    <tbody>
      <% @spots.each do |spot| %>
        <tr>
          <td><%= spot.description %></td>
            <% if spot.user_id == nil %>
              <td><%= link_to 'Take this Spot!', take_spot_path(spot.id), method: :post %></td>
            <% else %>
               <td><%= User.find(spot.user_id).name  %></td>
            <%end%>
          <% if current_user.id == @room.owner_id %>
            <td><%= link_to 'Remove spot', [@room, spot],  data: { confirm: 'Are you sure?' }, method: :delete %></td>
            <td><%= link_to 'Remove from Spot', remove_user_path(spot.id) %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<p></p>
<% if @room.owner_id == current_user.id %>
  <%= link_to 'Edit', edit_room_path %> |
<%end%>
<%= link_to 'Back', trip_path(@trip.id) %> |

<% if current_user.id == @room.owner_id %>
  <%= link_to 'Add a Spot', new_room_spot_path(@room) %>
<% end %>

</div>
